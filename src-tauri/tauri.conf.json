{
  "$schema": "./gen/schemas/desktop-schema.json",
  "identifier": "com.starrandom.app",
  "productName": "StarRandom",
  "version": "1.0.7",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../out"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            "core:event:default",
            "core:window:default",
            "core:app:default",
            "core:resources:default",
            "core:menu:default",
            "core:tray:default",
            "shell:default",
            "store:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "StarRandom",
        "width": 800,
        "height": 600,
        "visible": true,
        "decorations": true,
        "resizable": true,
        "center": true,
        "transparent": false,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "focus": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "",
    "resources": [],
    "shortDescription": "",
    "targets": ["msi", "nsis"],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": ["en-US", "zh-CN"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "store": null
  }
} 